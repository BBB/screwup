div( class: (image.passcode.length > 0 ? 'private image' : 'image') )
  div.wrapper( style: ' width: ' + image.sizes.s.width + 'px; height:' +  image.sizes.s.height + 'px; background: #1e1e1e url(/i/' + image.linkid + '/s/' +  image.passcode + ') 0 0 no-repeat', rel: image.sizes.o.width + ',' + image.sizes.o.height )
    a.delete.nor( href: '/i/delete/' + image.linkid, title: 'Delete Image' )
      image( src: '/img/delete.png', title: 'Delete Image' )
    a.zoom.nor( href: '/i/' + image.linkid + '/o/' + image.passcode, title: 'Uploaded on ' + image.uploaded )
      image( src: '/img/zoom.png', title: 'View Image' )
    a.link.nor( href: '#', title: 'Copy Link' )
      image( src: '/img/link.png', title: 'Copy Link' )
    - if (image.passcode.length > 0)
      a( href: '#', rel: image.passcode, title: image.passcode, class: 'lock' )
        img( src: '/img/lock.png', alt: 'Private Image', title: 'Private Image' )
  div.footer( style: 'top: ' + image.sizes.s.height + 'px;')
    span=image.sizes.o.views + ' views'
